@model AdminViewModel

@{
    ViewData["Title"] = "Admin Page";
}

<div class="text-center">
    <h1 class="display-4">Администратор</h1>
</div>

<form method="post" enctype="multipart/form-data" action="/admin/submit">
    <div class="form-group">
        <label for="task">Описание задачи:</label>
        <input type="text" id="task" name="Task" class="form-control">
    </div>
    <div class="form-group">
        <label for="assigneeId">Исполнитель:</label>
        <select id="assigneeId" name="AssigneeId" class="form-control">
            <option value="">Выберите исполнителя</option>
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="dueDate">Дата исполнения:</label>
        <input type="date" id="dueDate" name="DueDate" class="form-control" style="width: 200px;">
    </div>
    <div class="form-group">
        <label for="fileUpload">Загрузить файл:</label>
        <input type="file" id="fileUpload" name="FileUpload" class="form-control-file">
    </div>
    <div class="form-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>
